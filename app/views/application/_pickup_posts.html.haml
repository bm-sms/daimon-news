- cache [current_site, 'pickup_posts'], expires_in: 1.minutes do
  - if pickup_posts.published.exists?
    %h2.subheading.subheading--aside.subheading--press-articles.subheading--press-articles--pickup ピックアップ記事
    %ul.pickup-articles
      - pickup_posts.includes(post: [:categories]).published.ordered.each do |pickup_post|
        = render partial: 'posts/summary_with_content', locals: {post: pickup_post.post}
