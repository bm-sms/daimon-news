%h1 Listing links

%table.table
  %thead
    %tr
      %th Text
      %th Url
      %th Order
      %th
      %th
      %th

  %tbody
    - @links.each do |link|
      %tr
        %td= link.text
        %td= link.url
        %td= link.order
        %td= link_to 'Show', admin_site_link_path(id: link)
        %td= link_to 'Edit', edit_admin_site_link_path(id: link)
        %td= link_to 'Destroy', admin_site_link_path(id: link), method: :delete, data: { confirm: 'Are you sure?' }

= link_to 'New Link', new_admin_site_link_path, class: 'btn btn-default'
