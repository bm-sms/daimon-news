%li.article-summary.article-summary--with-thumbnail
  = link_to post_url(public_id: post.public_id), class: 'article-summary__url' do
    - if current_site.resize_thumb?
      = image_tag post.thumbnail.resized.url, class: 'article-summary__thumbnail article-summary__thumbnail_resized'
    - else
      = image_tag post.thumbnail_url, class: 'article-summary__thumbnail'
    .article-summary__body
      .article-summary__data
        %time.article-summary__data-item
          = l post.published_at.to_date if post.published_at?
        - post.categories.each do |category|
          %span.category= category.name
      %p.article-summary__title
        = post.title

      = yield
