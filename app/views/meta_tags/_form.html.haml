= form_for @meta_tag do |f|
  - if @meta_tag.errors.any?
    #error_explanation
      %h2= "#{pluralize(@meta_tag.errors.count, "error")} prohibited this meta_tag from being saved:"
      %ul
        - @meta_tag.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :content
    = f.text_field :content
  .field
    = f.label :site
    = f.text_field :site
  .actions
    = f.submit 'Save'
