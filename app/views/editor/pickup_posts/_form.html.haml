= bootstrap_form_for [:editor, @pickup_post], layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10" do |f|
  = f.collection_select :post_id, current_site.posts, :id, :title, {prompt: '選択してください'}, {class: 'form-control select2', "data-select2-allow-clear": false}

  = f.form_group do
    = f.submit
