- url = polymorphic_url([:site, :editor, @category], site_id: current_site)

= bootstrap_form_for @category, url: url, layout: :horizontal, label_col: 'col-sm-2', control_col: 'col-sm-10' do |f|
  = f.text_field :name
  = f.text_area :description, class: "markdown-editor", data: {upload_path: site_editor_images_url(site_id: current_site)}
  = f.text_field :slug, help: "URLの一部に使うこのカテゴリを表すわかりやすい英単語を指定します"
  = f.number_field :order, help: "ナビゲーションバーに表示する順序を指定します"

  = f.form_group do
    = f.submit
